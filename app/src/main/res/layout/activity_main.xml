<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#f1eef4"
            android:orientation="vertical"
            tools:context=".MainActivity">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="8"
                android:background="#f1eef4"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="15dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="35dp">

                    <ImageButton
                        android:id="@+id/imageButton"
                        android:layout_width="35dp"
                        android:layout_height="50dp"
                        android:background="@drawable/butto_bg" />

                    <LinearLayout
                        android:layout_width="150dp"
                        android:layout_height="match_parent"
                        android:layout_centerInParent="true"
                        android:background="@drawable/roundimg"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/imageView3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:srcCompat="@drawable/baseline_location_on_24" />

                        <TextView
                            android:id="@+id/textView3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="10dp"
                            android:text="Lucknow"
                            android:textColor="#FFFFFF" />
                    </LinearLayout>

                    <ImageButton
                        android:id="@+id/notification"
                        android:layout_width="35dp"
                        android:layout_height="50dp"
                        android:layout_alignParentEnd="true"
                        android:background="@drawable/noti_back" />
                </RelativeLayout>

                <TextView
                    android:id="@+id/textView4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="25dp"
                    android:layout_marginBottom="10dp"
                    android:fontFamily="sans-serif-medium"
                    android:text="Get the best in aGrow"
                    android:textColor="#000000"
                    android:textSize="25sp" />

                <HorizontalScrollView
                    android:id="@+id/scrollView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:scrollbars="none">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/imageView4"
                            android:layout_width="90dp"
                            android:layout_height="120dp"
                            app:srcCompat="@drawable/sports" />

                        <ImageView

                            android:layout_width="90dp"
                            android:layout_height="120dp"
                            app:srcCompat="@drawable/electronics" />

                        <ImageView

                            android:layout_width="90dp"
                            android:layout_height="120dp"
                            app:srcCompat="@drawable/tools" />

                        <ImageView

                            android:layout_width="90dp"
                            android:layout_height="120dp"
                            app:srcCompat="@drawable/sports" />

                        <ImageView

                            android:layout_width="90dp"
                            android:layout_height="120dp"
                            app:srcCompat="@drawable/electronics" />

                        <ImageView

                            android:layout_width="90dp"
                            android:layout_height="120dp"
                            app:srcCompat="@drawable/tools" />


                    </LinearLayout>
                </HorizontalScrollView>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="4"
                android:background="@drawable/round"
                android:orientation="vertical"
                android:padding="20dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:gravity="center_vertical">

                    <TextView
                        android:id="@+id/textView8"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:layout_toLeftOf="@id/imageView6"
                        android:fontFamily="sans-serif-medium"
                        android:text="View All"
                        android:textColor="#724cf6"
                        android:textSize="18sp" />

                    <TextView
                        android:id="@+id/textView7"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="sans-serif-medium"
                        android:text="Book latest in your Area"
                        android:textColor="#000000"
                        android:textSize="25sp" />

                    <ImageView
                        android:id="@+id/imageView6"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_margin="6dp"
                        android:layout_marginTop="5dp"
                        app:srcCompat="@drawable/baseline_keyboard_arrow_right_24" />
                </RelativeLayout>

                <HorizontalScrollView
                    android:id="@+id/ScrollView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:scrollbars="none">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginEnd="15dp"
                        android:orientation="horizontal">


                        <LinearLayout
                            android:layout_width="150dp"
                            android:layout_height="match_parent"
                            android:layout_marginRight="15dp"
                            android:onClick="pixel"
                            android:orientation="vertical">


                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="150dp"
                                android:background="@drawable/round_corners"
                                android:orientation="vertical">


                                <ImageView
                                    android:id="@+id/imageView74"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    app:srcCompat="@drawable/tractor" />

                                <ImageView
                                    android:id="@+id/imageView84"
                                    android:layout_width="20dp"
                                    android:layout_height="20dp"
                                    android:layout_alignParentRight="true"
                                    android:layout_marginStart="20dp"
                                    android:layout_marginTop="20dp"
                                    android:layout_marginEnd="20dp"
                                    android:layout_marginBottom="20dp"
                                    app:srcCompat="@drawable/heart" />

                                <ImageView
                                    android:id="@+id/imageView94"
                                    android:layout_width="20dp"
                                    android:layout_height="20dp"

                                    android:layout_alignParentBottom="true"
                                    android:layout_marginStart="100dp"
                                    android:layout_marginBottom="15dp"
                                    app:srcCompat="@drawable/star" />

                                <TextView
                                    android:id="@+id/textView94"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_alignParentBottom="true"
                                    android:layout_marginRight="5dp"
                                    android:layout_marginBottom="15dp"
                                    android:layout_toRightOf="@id/imageView94"
                                    android:text="4.1"
                                    android:textColor="#59B06C" />
                            </RelativeLayout>

                            <TextView

                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_margin="5dp"
                                android:fontFamily="sans-serif-medium"
                                android:paddingStart="10dp"
                                android:text="Tractstar Tractor"
                                android:textColor="@color/black"
                                android:textSize="20sp" />

                            <TextView

                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="sans-serif-medium"
                                android:paddingStart="10dp"
                                android:text=" ₹250.00/hr"
                                android:textColor="#555353"
                                android:textSize="15sp" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="150dp"
                            android:layout_height="match_parent"
                            android:layout_marginRight="15dp"
                            android:onClick="baseCamp"
                            android:orientation="vertical">


                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="150dp"
                                android:background="@drawable/round_corners"
                                android:orientation="vertical">


                                <ImageView
                                    android:id="@+id/imageView75"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    app:srcCompat="@drawable/harvestor" />

                                <ImageView
                                    android:id="@+id/imageView85"
                                    android:layout_width="20dp"
                                    android:layout_height="20dp"
                                    android:layout_alignParentRight="true"
                                    android:layout_marginStart="20dp"
                                    android:layout_marginTop="20dp"
                                    android:layout_marginEnd="20dp"
                                    android:layout_marginBottom="20dp"
                                    app:srcCompat="@drawable/heartpurple" />

                                <ImageView
                                    android:id="@+id/imageView95"
                                    android:layout_width="20dp"
                                    android:layout_height="20dp"

                                    android:layout_alignParentBottom="true"
                                    android:layout_marginStart="100dp"
                                    android:layout_marginBottom="15dp"
                                    app:srcCompat="@drawable/starpurple" />

                                <TextView
                                    android:id="@+id/textView95"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_alignParentBottom="true"
                                    android:layout_marginBottom="15dp"
                                    android:layout_toRightOf="@id/imageView95"
                                    android:text="4.9"
                                    android:textColor="#724cf6" />
                            </RelativeLayout>

                            <TextView

                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_margin="5dp"
                                android:fontFamily="sans-serif-medium"
                                android:paddingStart="10dp"
                                android:text="Harvestor"
                                android:textColor="@color/black"
                                android:textSize="20sp" />

                            <TextView

                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="sans-serif-medium"
                                android:paddingStart="10dp"
                                android:text=" ₹1500/hr"
                                android:textColor="#555353"
                                android:textSize="15sp" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="150dp"
                            android:layout_height="match_parent"
                            android:layout_marginRight="15dp"
                            android:onClick="steel"
                            android:orientation="vertical">


                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="150dp"
                                android:background="@drawable/round_corners"
                                android:orientation="vertical">


                                <ImageView
                                    android:id="@+id/imageView7"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    app:srcCompat="@drawable/threshor" />

                                <ImageView
                                    android:id="@+id/imageView8"
                                    android:layout_width="20dp"
                                    android:layout_height="20dp"
                                    android:layout_alignParentRight="true"
                                    android:layout_marginStart="20dp"
                                    android:layout_marginTop="20dp"
                                    android:layout_marginEnd="20dp"
                                    android:layout_marginBottom="20dp"
                                    app:srcCompat="@drawable/heart" />

                                <ImageView
                                    android:id="@+id/imageView9"
                                    android:layout_width="20dp"
                                    android:layout_height="20dp"

                                    android:layout_alignParentBottom="true"
                                    android:layout_marginStart="100dp"
                                    android:layout_marginBottom="15dp"
                                    app:srcCompat="@drawable/star" />

                                <TextView
                                    android:id="@+id/textView9"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_alignParentBottom="true"
                                    android:layout_marginBottom="15dp"
                                    android:layout_toRightOf="@id/imageView9"
                                    android:text="4.1"
                                    android:textColor="#59B06C" />
                            </RelativeLayout>

                            <TextView

                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_margin="5dp"
                                android:fontFamily="sans-serif-medium"
                                android:paddingStart="10dp"
                                android:text="Grain Threshor"
                                android:textColor="@color/black"
                                android:textSize="20sp" />

                            <TextView

                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="sans-serif-medium"
                                android:paddingStart="10dp"
                                android:text=" ₹250/hr"
                                android:textColor="#555353"
                                android:textSize="15sp" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="150dp"
                            android:layout_height="match_parent"
                            android:layout_marginRight="15dp"
                            android:onClick="spray"
                            android:orientation="vertical">


                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="150dp"
                                android:background="@drawable/round_corners"
                                android:orientation="vertical">


                                <ImageView
                                    android:id="@+id/imageView73"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    app:srcCompat="@drawable/spraymachine" />

                                <ImageView
                                    android:id="@+id/imageView83"
                                    android:layout_width="20dp"
                                    android:layout_height="20dp"
                                    android:layout_alignParentRight="true"
                                    android:layout_marginStart="20dp"
                                    android:layout_marginTop="20dp"
                                    android:layout_marginEnd="20dp"
                                    android:layout_marginBottom="20dp"
                                    app:srcCompat="@drawable/heart" />

                                <ImageView
                                    android:id="@+id/imageView93"
                                    android:layout_width="20dp"
                                    android:layout_height="20dp"

                                    android:layout_alignParentBottom="true"
                                    android:layout_marginStart="100dp"
                                    android:layout_marginBottom="15dp"
                                    app:srcCompat="@drawable/star" />

                                <TextView
                                    android:id="@+id/textView93"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_alignParentBottom="true"
                                    android:layout_marginRight="5dp"
                                    android:layout_marginBottom="15dp"
                                    android:layout_toRightOf="@id/imageView93"
                                    android:text="4.1"
                                    android:textColor="#59B06C" />
                            </RelativeLayout>

                            <TextView

                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_margin="5dp"
                                android:fontFamily="sans-serif-medium"
                                android:paddingStart="10dp"
                                android:text="Spray machine "
                                android:textColor="@color/black"
                                android:textSize="20sp" />

                            <TextView

                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="sans-serif-medium"
                                android:paddingStart="10dp"
                                android:text=" ₹50.00/hr"
                                android:textColor="#555353"
                                android:textSize="15sp" />
                        </LinearLayout>

                    </LinearLayout>


                </HorizontalScrollView>

                <TextView

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:layout_marginBottom="15dp"
                    android:fontFamily="sans-serif-medium"
                    android:text="Available now"
                    android:textColor="#000000"
                    android:textSize="25sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:background="@drawable/roundfiftydp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:padding="20dp">


                    <androidx.cardview.widget.CardView
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_marginStart="5dp"
                        android:padding="5dp"
                        app:cardCornerRadius="15dp">

                        <ImageView
                            android:id="@+id/imageView10"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:srcCompat="@drawable/screwmachine" />
                    </androidx.cardview.widget.CardView>

                    <LinearLayout
                        android:layout_width="200dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="15dp"
                        android:orientation="vertical">

                        <TextView

                            android:id="@+id/textView11"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:fontFamily="sans-serif-medium"
                            android:text="Craftsman building tools"
                            android:textColor="#000000"
                            android:textSize="14sp" />

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="20dp"
                            android:layout_weight="1">

                            <ImageView
                                android:id="@+id/imageView11"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                app:srcCompat="@drawable/locationblack" />

                            <TextView
                                android:id="@+id/textView12"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerInParent="true"
                                android:text="4.0km    ₹200.00/hr " />
                        </RelativeLayout>
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:layout_marginTop="15dp"
                    android:background="@drawable/roundfiftydp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:padding="20dp">


                    <androidx.cardview.widget.CardView
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_marginStart="5dp"
                        android:padding="5dp"
                        app:cardCornerRadius="15dp">

                        <ImageView
                            android:id="@+id/imageView101"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:srcCompat="@drawable/plumbing" />
                    </androidx.cardview.widget.CardView>

                    <LinearLayout
                        android:layout_width="200dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="15dp"
                        android:orientation="vertical">

                        <TextView

                            android:id="@+id/textView111"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:fontFamily="sans-serif-medium"
                            android:text="Rahul Plumbing Services"
                            android:textColor="#000000"
                            android:textSize="14sp" />

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="20dp"
                            android:layout_weight="1">

                            <ImageView
                                android:id="@+id/imageView111"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                app:srcCompat="@drawable/locationblack" />

                            <TextView
                                android:id="@+id/textView121"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerInParent="true"
                                android:text="2.5km    ₹180.00/hr " />
                        </RelativeLayout>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="#FFFFFF" />

        </LinearLayout>

    </ScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"

        android:background="#FFFFFF"
        android:gravity="center"
        android:orientation="horizontal">


        <ImageView

            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_weight="1"
            app:srcCompat="@drawable/apps_purple_com" />

        <ImageView

            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_weight="1"
            app:srcCompat="@drawable/heart_svgrepo_com__1_" />

        <LinearLayout

            android:layout_width="35dp"
            android:layout_height="50dp"
            android:layout_weight="1.2"
            android:background="@drawable/plusbutton"
            android:padding="10dp">

            <ImageView
                android:id="@+id/imageView12"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:srcCompat="@drawable/baseline_add_24" />
        </LinearLayout>

        <ImageView

            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_weight="1"
            app:srcCompat="@drawable/message" />

        <ImageView

            android:layout_width="30dp"
            android:layout_height="25dp"
            android:layout_weight="1"
            app:srcCompat="@drawable/profile" />

    </LinearLayout>
</RelativeLayout>